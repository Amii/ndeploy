<project name="ndeploy.scm.git" description="Git">
    
    <target name="ndeploy.scm.git.init">
        <phingcall target="ndeploy.scm.git.update" />
    </target>
    
    <target name="ndeploy.scm.git.update">
        <if>
            <istrue value="${application.repositorydir.new}" />
            <then>
                <echo>New repository, cloning.</echo>
                <gitclone repository="${scm.repository}" targetPath="${application.repositorydir}" />
            </then>
            <else>
                <gitpull repository="${application.repositorydir}" all="true"/>
            </else>
        </if>

        <if>
            <not>
                <equals arg1="${scm.branch}" arg2="" />
            </not>
            <then>
                <gitcheckout repository="${application.repositorydir}" branchname="${scm.branch}"/>
            </then>
        </if>

        <gitlog format="%h" maxCount="1" outputProperty="scm.hash" repository="${application.repositorydir}" />

        <phingcall target="ndeploy.scm.release" />
    </target>

</project>